@page
@model ListarLancamentosModel
@{
    ViewData["Title"] = "Meus Lançamentos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Criar" class="btn btn-primary">Adicionar Novo Lançamento</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Tipo</th>
            <th>Vencimento</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Lancamentos)
        {
            <tr>
                <td>@item.Descricao</td>
                <td class="@(item.Tipo == "Receita" ? "text-success" : "text-danger")">
                    @item.Valor.ToString("C")
                </td>
                <td>@item.Tipo</td>
                <td>@item.DataVencimento.ToShortDateString()</td>
                <td>
                    <span class="badge @(item.Status == "Pago" || item.Status == "Recebido" ? "bg-success" : "bg-warning text-dark")">
                        @item.Status
                    </span>
                </td>
                <td>
                    <a asp-page="./Editar" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a> |
                    
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este lançamento?');">
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>