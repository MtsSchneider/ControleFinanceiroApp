@page
@model ControleFinanceiroApp.Pages.RendaExtra.Produtos.EditarModel
@{
    ViewData["Title"] = "Editar Produto";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Produto.Id" />
            <input type="hidden" asp-for="Produto.UsuarioId" />

            <div class="mb-3">
                <label asp-for="Produto.Nome" class="form-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>
			
			<div class="mb-3">
				<label asp-for="Produto.CodigoProduto" class="form-label">Código do Produto</label>
				<input asp-for="Produto.CodigoProduto" class="form-control" />
				<span asp-validation-for="Produto.CodigoProduto" class="text-danger"></span>
			</div>
            
            <div class="mb-3">
                <label asp-for="Produto.QuantidadeEstoque" class="form-label"></label>
                <input asp-for="Produto.QuantidadeEstoque" class="form-control" type="number" />
                <span asp-validation-for="Produto.QuantidadeEstoque" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Produto.PrecoVenda" class="form-label"></label>
                <input asp-for="Produto.PrecoVenda" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Produto.PrecoVenda" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            <a asp-page="./Index" class="btn btn-secondary">Voltar ao Estoque</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}